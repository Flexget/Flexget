{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "widen",
  "rebaseWhen": "behind-base-branch",
  "lockFileMaintenance": {
    "enabled": true
  },
  "pip_requirements": {
    "enabled": false
  },
  "npm": {
    "enabled": false
  },
  "gitIgnoredAuthors": ["66853113+pre-commit-ci[bot]@users.noreply.github.com"],
  "vulnerabilityAlerts": {
    "enabledManagers": ["dockerfile", "poetry", "github-actions"]
  },
  "pre-commit": {
    "enabled": true
  }
}
